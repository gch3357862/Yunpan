<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gch.yunpan.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.gch.yunpan.entity.User">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="account" jdbcType="VARCHAR" property="name"/>
        <result column="password" jdbcType="VARCHAR" property="password"/>
        <result column="name" jdbcType="NVARCHAR" property="name"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
    </resultMap>

    <select id="selectByAccount" resultType="com.gch.yunpan.entity.User">
        SELECT *
        FROM user
        WHERE account = #{account}
    </select>

    <select id="selectByName" resultMap="BaseResultMap">
        SELECT *
        FROM user
        WHERE name LIKE CONCAT('%', #{name}, '%')
    </select>

    <insert id="insert">
        INSERT INTO user(id, account, password, name, create_time)
        VALUES (#{id}, #{account}, #{password}, #{name}, NOW())
    </insert>

    <update id="update">
        UPDATE user
        <set>
            <if test="password != null">
                SET password = #{password}
            </if>
            <if test="name != null">
                AND name = #{name}
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM user
        WHERE id = #{id}
    </delete>
</mapper>